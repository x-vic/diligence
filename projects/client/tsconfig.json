{
  "compilerOptions": {
    "target": "ES2015",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react",
    // 下面两个选项用来解决打包 async 报错的问题
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "src": ["src/*"],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": ["src/*", "src/**/*.d.ts"]
}
